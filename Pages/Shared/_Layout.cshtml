<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RagnarockApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* Icons from fontawesome *@
    <script src="https://kit.fontawesome.com/8619d86bb7.js" crossorigin="anonymous"></script>
    @* Linked Stylesheets *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <ul class="navigation">
                <li class="navigation__listItem">
                    <a class="navigation__link" asp-page="/Index" rel="noreferrer">Home</a>
                    </li>
                <li class="navigation__listItem">
                    <a class="navigation__link" asp-page="/Privacy" rel="noreferrer">Privacy</a>
                    </li>
                <li class="navigation__listItem">
                    <a class="navigation__link" asp-page="Exhibits/GetAllExhibits" rel="noreferrer">Exhibitions</a>
                    </li>
                <li class="navigation__listItem">
                    <a class="navigation__link" asp-page="/About" rel="noreferrer">About</a>
                    </li>
                <li class="navigation__listItem">
                    <a class="navigation__link" asp-page="/Contact" rel="noreferrer">Contact</a>
                    </li>
            </ul>
        </nav>
    </header>
    @* <div class="wrapper"> *@
        <main role="main">
            @RenderBody()
        </main>

    <footer>
    </footer>

    @* </div> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>